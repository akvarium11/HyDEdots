{
    "layer": "top",
    "output": [
        "*"
    ],
    "height": 8,
    "exclusive": true,
    "passthrough": false,
    "reload_style_on_change": true,
    "include": [
        "$XDG_CONFIG_HOME/waybar/modules/*json*", 
        "$XDG_CONFIG_HOME/waybar/includes/includes.json" 
    ],
    "modules-left": [
        "group/pill#left1"
    ],
    "group/pill#left1": {
        "orientation": "inherit",
        "modules": [
            "idle_inhibitor",
            "hyprland/workspaces"
        ]
    },
    "group/pill#left2": {
        "orientation": "inherit",
        "modules": [
        ]
    },
    "modules-center": [
        "group/pill#center1",
        "group/pill#center2"
    ],
    "group/pill#center1": {
        "modules": [
            "wlr/taskbar"
        ],
        "orientation": "inherit"
    },
    "group/pill#center2": {
        "modules": [
            "clock"
        ],
        "orientation": "inherit"
    },
    "modules-right": [
        "group/pill#right1",
        "group/pill#right2"
    ],
    "group/pill#right1": {
        "modules": [
          "privacy",
          "tray",
          "battery"
        ],
        "orientation": "inherit"
    },
    "group/pill#right2": {
        "modules": [
            "backlight",
            "pulseaudio",
            "custom/keybindhint",
            "custom/hyde-menu",
            "custom/power"
        ],
        "orientation": "inherit"
    }
}
